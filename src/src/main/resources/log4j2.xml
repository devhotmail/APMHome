<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF" strict="true">
	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS}[%t]%-5level %logger{12} - %msg%n"/>
		</Console>
	</appenders>

	<loggers>
		<root level="info">
			<appender-ref ref="Console"/>
		</root>
		<logger name="com.demo" level="${log4j.level}">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="com.ge.apm.view" level="info">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="com.demo.dao" level="warn">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="webapp.framework.web.filter" level="warn">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="org.springframework.transaction" level="warn">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="org.springframework.orm.hibernate3" level="warn">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="org.hibernate.cache.EhCacheProvider" level="error">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="org.hibernate" level="warn">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="org.springframework.security" level="warn">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="org.apache.commons" level="warn">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="org.springframework" level="warn">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="org.springframework.beans.factory.support" level="warn">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="net.sf.ehcache" level="warn">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="druid.sql" level="warn">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="druid.sql.DataSource" level="warn">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="druid.sql.Connection" level="warn">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="druid.sql.Statement" level="debug">
			<appender-ref ref="Console"/>
		</logger>
		<logger name="druid.sql.ResultSet" level="debug">
			<appender-ref ref="Console"/>
		</logger>
	</loggers>
</configuration>